generator client {
  provider = "prisma-client"
  output = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Equipment {
 id String @id
 assetTag String
 serialNumber String
 model String
 type String
 status String
 locationId String
 purchaseDate DateTime
 warrantyEnd DateTime
 metadata Json?

 maintenance  Maintenance[]
}

model Maintenance {
  id             String   @id 
  equipmentId    String
  type           String
  scheduledAt  DateTime
  technician     String
  status         String 
  performedAt  DateTime?
  cost           String?
  notes          Json?

  equipment Equipment @relation(fields: [equipmentId], references: [id])

  @@index([equipmentId])
}